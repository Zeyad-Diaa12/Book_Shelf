@model BookShelf.Application.DTOs.BookDto

@{
    ViewData["Title"] = "Delete Book";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="mb-4">Delete Book</h1>
            <div class="alert alert-danger">
                <h4><i class="bi bi-exclamation-triangle me-2"></i>Are you sure you want to delete this book?</h4>
                <p>This action cannot be undone.</p>
            </div>
            
            <div class="card mb-4">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="@(string.IsNullOrEmpty(Model.CoverImageUrl) ? "/images/default-book-cover.jpg" : Model.CoverImageUrl)" 
                             class="img-fluid rounded-start" alt="@Model.Title" style="max-height: 300px; object-fit: cover; width: 100%;">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@Model.Title</h5>
                            <h6 class="card-subtitle mb-2 text-muted">by @Model.Author</h6>
                            <p class="card-text text-truncate">@Model.Description</p>
                            <p class="card-text">
                                <small class="text-muted">ISBN: @Model.ISBN</small>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">Published: @Model.PublishedDate.ToString("MMMM dd, yyyy")</small>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">Pages: @Model.PageCount</small>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Back to Details</a>
                    <div>
                        <a asp-action="Index" class="btn btn-outline-secondary me-2">Back to List</a>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>